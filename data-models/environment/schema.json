{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/environment/schema.json",
  "title": "Environment",
  "description": "Environmental and ambient measurements",
  "type": "object",
  "$defs": {
    "co2": {
      "ppm": {
        "measurementType": "akenza/environment/co2/ppm",
        "title": "CO2",
        "description": "Carbon Dioxide in ppm",
        "type": "number",
        "unit": "ppm"
      }
    },
    "tvoc": {
      "ppb": {
        "measurementType": "akenza/environment/tvoc/ppb",
        "title": "TVOC",
        "description": "Total Volatile Organic Compunds in ppb",
        "type": "number",
        "unit": "ppb"
      }
    },
    "pm1": {
      "mcgm3": {
        "measurementType": "akenza/environment/pm1/mcgm3",
        "title": "PM1.0",
        "description": "Particles with a diameter of less than 1.0 micrometers",
        "type": "number",
        "unit": "μg/m3"
      }
    },
    "pm2_5": {
      "mcgm3": {
        "measurementType": "akenza/environment/pm2_5/mcgm3",
        "title": "PM2.5",
        "description": "Particles with a diameter of less than 2.5 micrometers",
        "type": "number",
        "unit": "μg/m3"
      }
    },
    "pm10": {
      "mcgm3": {
        "measurementType": "akenza/environment/pm10/mcgm3",
        "title": "PM10",
        "description": "Particles with a diameter of less than 10 micrometers",
        "type": "number",
        "unit": "μg/m3"
      }
    },
    "temperature": {
      "celsius": {
        "measurementType": "akenza/environment/temperature/celsius",
        "title": "Temperature",
        "description": "Temperature in degrees Celcius",
        "type": "number",
        "unit": "°C"
      },
      "fahrenheit": {
        "measurementType": "akenza/environment/temperature/fahrenheit",
        "title": "Temperature",
        "description": "Temperature in degrees Fahrenheit",
        "type": "number",
        "unit": "°F"
      },
      "kelvin": {
        "measurementType": "akenza/environment/temperature/kelvin",
        "title": "Temperature",
        "description": "Temperature in Kelvin",
        "type": "number",
        "unit": "K"
      }
    },
    "humidity": {
      "percent": {
        "measurementType": "akenza/environment/humidity/percent",
        "title": "Humidity",
        "description": "Relative humidity in percent",
        "type": "number",
        "unit": "%",
        "minimum": 0,
        "maximum": 100
      }
    },
    "pressure": {
      "hPa": {
        "measurementType": "akenza/environment/pressure/hPa",
        "title": "Pressure",
        "description": "Barometric pressure in hPa",
        "type": "number",
        "unit": "hPa"
      },
      "kPa": {
        "measurementType": "akenza/environment/pressure/kPa",
        "title": "Pressure",
        "description": "Barometric pressure in kPa",
        "type": "number",
        "unit": "kPa"
      },
      "bar": {
        "measurementType": "akenza/environment/pressure/bar",
        "title": "Pressure",
        "description": "Pressure in bar",
        "type": "number",
        "unit": "bar"
      }
    },
    "illuminance": {
      "lux": {
        "measurementType": "akenza/environment/illuminance/lux",
        "title": "Illuminance",
        "description": "Illuminance in lux",
        "type": "number",
        "unit": "lx"
      },
      "lm": {
        "measurementType": "akenza/environment/illuminance/lm",
        "title": "Illuminance",
        "description": "Illuminance in lumen",
        "type": "number",
        "unit": "lm"
      }
    },
    "brightness": {
      "percent": {
        "measurementType": "akenza/environment/brightness/percent",
        "title": "Brightness",
        "description": "Perceived brightness in percent",
        "type": "number",
        "unit": "%",
        "minimum": 0,
        "maximum": 100
      }
    },
    "soundLevel": {
      "dba": {
        "measurementType": "akenza/environment/soundLevel/dba",
        "title": "Sound Level",
        "description": "Sound level in dB(A)",
        "type": "number",
        "unit": "dB(A)"
      },
      "dbspl": {
        "measurementType": "akenza/environment/soundLevel/dbspl",
        "title": "Sound Level",
        "description": "Sound level in dB(SPL)",
        "type": "number",
        "unit": "dB(SPL)"
      }
    }
  }
}
