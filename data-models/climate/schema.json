{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://akenza.github.io/device-types-library/data-models/main/data-models/climate/schema.json",
    "title": "Climate",
    "description": "Climate measurements.",
    "type": "object",
    "$defs": {
        "temperature": {
            "celsius": {
                "measurementType": "akenza/climate/temperature/celsius",
                "title": "Temperature (°C)",
                "description": "The temperature in degrees Celcius.",
                "type": "number",
                "unit": "°C"
            },
            "fahrenheit": {
                "measurementType": "akenza/climate/temperature/fahrenheit",
                "title": "Temperature (F)",
                "description": "The temperature in degrees Fahrenheit.",
                "type": "number",
                "unit": "F"
            },
            "kelvin": {
                "measurementType": "akenza/climate/temperature/kelvin",
                "title": "Temperature (K)",
                "description": "The temperature in degrees Kelvin.",
                "type": "number",
                "unit": "K"
            }
        },
        "humidity": {
            "percent": {
                "measurementType": "akenza/climate/humidity/percent",
                "title": "Humidity",
                "description": "The relative humidity in percent.",
                "type": "number",
                "unit": "%",
                "minimum": 0.0,
                "maximum": 100.0
            }
        },
        "pressure": {
            "hPa": {
                "measurementType": "akenza/climate/pressure/hPa",
                "title": "Pressure (hPa)",
                "description": "Barometric Pressure in hPa",
                "type": "number",
                "unit": "hPa"
            }
        }
    }
}