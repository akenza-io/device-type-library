{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/location/schema.json",
  "title": "Location",
  "description": "Object location",
  "type": "object",
  "$defs": {
    "latitude": {
      "degrees": {
        "measurementType": "akenza/location/latitude/degrees",
        "title": "Latitude",
        "description": "Latitude of a location in degrees",
        "type": "number",
        "unit": "°",
        "minimum": -90.0,
        "maximum": 90
      }
    },
    "longitude": {
      "degrees": {
        "measurementType": "akenza/location/longitude/degrees",
        "title": "Longitude",
        "description": "Longitude of a location in degrees",
        "type": "number",
        "unit": "°",
        "minimum": -180.0,
        "maximum": 180
      }
    },
    "altitude": {
      "meter": {
        "measurementType": "akenza/location/altitude/meter",
        "title": "Altitude",
        "description": "Altitude of a location in meters",
        "type": "number",
        "unit": "m"
      }
    }
  }
}
