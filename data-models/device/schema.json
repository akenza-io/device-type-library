{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/device/schema.json",
  "title": "Device",
  "description": "Device properties",
  "type": "object",
  "$defs": {
    "batteryLevel": {
      "percent": {
        "measurementType": "akenza/device/batteryLevel/percent",
        "title": "Battery Level",
        "description": "Battery level in percent",
        "type": "number",
        "unit": "%",
        "minimum": 0,
        "maximum": 100
      }
    },
    "batteryVoltage": {
      "volt": {
        "measurementType": "akenza/device/batteryVoltage/volt",
        "title": "Battery Voltage",
        "description": "Battery voltage in Volt",
        "type": "number",
        "unit": "V"
      }
    },
    "system": {
      "status": {
        "measurementType": "akenza/device/system/status",
        "title": "System status",
        "description": "System status message",
        "type": "string"
      },
      "rssi": {
        "title": "RSSI",
        "unit": "dBm",
        "description": "Received Signal Strength Indication",
        "type": "number"
      }
    }
  }
}