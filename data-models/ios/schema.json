{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/ios/schema.json",
  "title": "IOs",
  "description": "IO measurements",
  "type": "object",
  "$defs": {
    "digitalInput": {
      "boolean": {
        "measurementType": "akenza/ios/digitalInput/boolean",
        "title": "Digital input",
        "description": "Digital input T/F",
        "type": "boolean"
      }
    },
    "analogInput": {
      "volt": {
        "measurementType": "akenza/ios/analogInput/volt",
        "title": "Analog input",
        "description": "Analog input in V",
        "type": "number",
        "unit": "V"
      },
      "milliVolt": {
        "measurementType": "akenza/ios/analogInput/milliVolt",
        "title": "Analog input",
        "description": "Analog input in mV",
        "type": "number",
        "unit": "mV"
      }
    },
    "digitalOutput": {
      "boolean": {
        "measurementType": "akenza/ios/digitalOutput/boolean",
        "title": "Digital output",
        "description": "Digital output T/F",
        "type": "boolean"
      }
    },
    "pulseInput": {
      "count": {
        "measurementType": "akenza/ios/pulseInput/count",
        "title": "Pulse input",
        "description": "Pulse count",
        "type": "integer"
      }
    },
    "buttonStatus": {
      "status": {
        "measurementType": "akenza/ios/buttonStatus/status",
        "title": "Button status",
        "description": "Button status T/F",
        "type": "boolean"
      }
    },
    "buttonEvent": {
      "event": {
        "measurementType": "akenza/ios/buttonEvent/event",
        "title": "Button event",
        "description": "Button event T/F",
        "type": "boolean"
      },
      "count": {
        "measurementType": "akenza/ios/buttonEvent/count",
        "title": "Button count",
        "description": "Number of button presses",
        "type": "integer",
        "minimum": 0
      }
    },
    "reedContact": {
      "status": {
        "measurementType": "akenza/ios/reedContact/status",
        "title": "Reed contact",
        "description": "Reed contact T/F",
        "type": "boolean"
      },
      "count": {
        "measurementType": "akenza/ios/reedContact/count",
        "title": "Reed contact count",
        "description": "Number of reed contacts",
        "type": "integer",
        "minimum": 0
      }
    }
  }
}
