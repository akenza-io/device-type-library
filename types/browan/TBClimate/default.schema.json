{
  "$id": "https://akenza.io/browan/TBClimate/default.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Default",
  "type": "object",
  "properties": {
    "temperature": {
      "title": "Temperature",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "open": {
      "title": "Open",
      "description": "Status of the tab. open = true, closed = false",
      "type": "boolean"
    },
    "humidity": {
      "title": "Humidity",
      "unit": "%",
      "type": "number",
      "description": "The relative humidity in %",
      "minimum": 0,
      "maximum": 100
    },
    "co2": {
      "title": "CO2",
      "unit": "ppm",
      "type": "integer",
      "description": "Carbon Dioxide in ppm",
      "minimum": 0,
      "maximum": 10000
    },
    "voc": {
      "title": "VOC",
      "unit": "ppm",
      "type": "integer",
      "description": "Total Volatile Organic Compounds in ppm",
      "minimum": 0,
      "maximum": 60000
    }
  }
}
