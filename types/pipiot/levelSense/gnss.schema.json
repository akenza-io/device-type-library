{
  "$id": "https://akenza.io/pipiot/levelSense/gnss.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "processingType": "uplink_decoder",
  "topic": "gnss",
  "title": "GNSS",
  "properties": {
    "gnssFixTime": {
      "title": "Fix time",
      "type": "integer",
      "unit": "s",
      "description": "GNSS fix time",
      "minimum": 0,
      "maximum": 254,
      "hideFromKpis": true
    },
    "gnssLatitude": {
      "title": "Latitude",
      "unit": "°",
      "type": "number",
      "description": "Latitude"
    },
    "gnssLongitude": {
      "title": "Longitude",
      "unit": "°",
      "type": "number",
      "description": "Longitude"
    },
    "gnssAltitude": {
      "title": "Altitude",
      "unit": "m",
      "type": "number",
      "description": "Altitude"
    },
    "gnssHDOP": {
      "title": "GNSS HDOP",
      "type": "number",
      "description": "Horizontal Dilution of Precision for the GNSS fix."
    }
  },
  "required": [
    "gnssFixTime",
    "gnssLatitude",
    "gnssLongitude",
    "gnssAltitude",
    "gnssHDOP"
  ]
}