{
  "$id": "https://akenza.io/dragino/lht65/lifecycle.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "processingType": "uplink_decoder",
  "topic": "lifecycle",
  "title": "Lifecycle",
  "properties": {
    "batteryStatus": {
      "title": "Battery status",
      "description": "Battery status",
      "type": "string",
      "enum": [
        "ULTRA_LOW",
        "LOW",
        "OK",
        "GOOD"
      ],
      "hideFromKpis": true
    },
    "batteryVoltage": {
      "type": "number",
      "minimum": 0,
      "maximum": 24,
      "title": "Battery voltage",
      "desciption": "The battery voltage in Volt.",
      "unit": "V"
    },
    "connectionStatus": {
      "title": "Connection status",
      "description": "Connection status",
      "type": "string",
      "enum": [
        "NO_CONNECTION",
        "CONNECTED"
      ],
      "hideFromKpis": true
    },
    "externalSensor": {
      "title": "External sensor",
      "description": "Equals true if theres an external sensor.",
      "type": "boolean",
      "hideFromKpis": true
    },
    "batteryLevel": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "title": "Battery charge",
      "description": "The battery charge in percent.",
      "unit": "%"
    }
  },
  "required": [
    "batteryStatus",
    "batteryVoltage",
    "connectionStatus",
    "externalSensor"
  ]
}