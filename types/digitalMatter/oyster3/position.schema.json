{
  "$id": "https://akenza.io/digitalMatter/oyster3/position.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "processingType": "uplink_decoder",
  "topic": "position",
  "title": "Position",
  "properties": {
    "latitude": {
      "title": "Latitude",
      "unit": "°",
      "type": "number",
      "description": "Latitude",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "longitude": {
      "title": "Longitude",
      "unit": "°",
      "type": "number",
      "description": "Longitude",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "inTrip": {
      "title": "In trip",
      "type": "boolean",
      "description": "Is true if the accelerometer detects movement",
      "hideFromKpis": true
    },
    "fixFailed": {
      "title": "Fix failed",
      "type": "boolean",
      "description": "Equals true if the last GPS fix failed",
      "hideFromKpis": true
    },
    "headingDeg": {
      "title": "heading",
      "unit": "°",
      "type": "number",
      "description": "The direction where the sensor is heading"
    },
    "speedKmph": {
      "title": "speedKmph",
      "unit": "kmh",
      "type": "number",
      "description": "Acceleration of the sensor"
    },
    "manDown": {
      "title": "Man down",
      "type": "boolean",
      "description": "Equals true if no movement for configured period got detected (Needs to be activated)",
      "hideFromKpis": true
    },
    "inactiveDuration": {
      "title": "Inactive duration",
      "type": "string",
      "description": "Inactivity duration",
      "hideFromKpis": true
    },
    "inactivityAlarm": {
      "title": "Inactivity alarm",
      "type": "boolean",
      "description": "Inactivity alarm",
      "hideFromKpis": true
    }
  },
  "required": [
    "latitude",
    "longitude",
    "inTrip",
    "fixFailed",
    "headingDeg",
    "speedKmph"
  ]
}