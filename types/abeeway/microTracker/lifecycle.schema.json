{
  "$id": "https://akenza.io/abeeway/microTracker/lifecycle.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "processingType": "uplink_decoder",
  "topic": "lifecycle",
  "title": "Lifecycle",
  "properties": {
    "demandMessage": {
      "title": "Position on demand message",
      "description": "Equals true if the possition message was demanded.",
      "type": "boolean",
      "hideFromKpis": true
    },
    "positionMessage": {
      "title": "Periodic position message",
      "description": "Equals true if the possition message was periodic.",
      "type": "boolean",
      "hideFromKpis": true
    },
    "hasMoved": {
      "title": "Has moved",
      "description": "Equals true if the device moved since last message.",
      "type": "boolean",
      "hideFromKpis": true
    },
    "sos": {
      "title": "SOS",
      "description": "Equals true if the device sent an SOS signal.",
      "type": "boolean",
      "hideFromKpis": true
    },
    "operatingMode": {
      "title": "Operating mode",
      "description": "Operating mode",
      "type": "string",
      "enum": [
        "STANDBY",
        "MOTION_TRACKING",
        "PERMANENT_TRACKING",
        "MOTION_START_END_TRACKING",
        "ACTIVITY_TRACKING",
        "OFF"
      ],
      "hideFromKpis": true
    },
    "batteryStatus": {
      "title": "Battery status",
      "description": "Battery status",
      "type": "string",
      "enum": [
        "CHARGING",
        "ERROR",
        "NORMAL"
      ],
      "hideFromKpis": true
    },
    "batteryLevel": {
      "title": "Battery charge",
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "The battery charge in percent.",
      "unit": "%"
    },
    "temperature": {
      "title": "Temperature",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "acknowledge": {
      "title": "Acknowledge",
      "type": "boolean",
      "description": "Acknowledge byte",
      "hideFromKpis": true
    }
  },
  "required": [
    "demandMessage",
    "positionMessage",
    "hasMoved",
    "sos",
    "operatingMode",
    "batteryStatus",
    "batteryLevel",
    "temperature",
    "acknowledge"
  ]
}