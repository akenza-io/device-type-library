{
  "$id": "https://akenza.io/abeeway/microTracker/shocks.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Shocks",
  "type": "object",
  "properties": {
    "shocks": {
      "title": "Shocks",
      "description": "Number of shocks",
      "type": "integer"
    },
    "accX": {
      "title": "Accelerometer X Axis",
      "unit": "mg",
      "description": "Acceleration on the X-Axis is mg",
      "type": "integer",
      "minimum": -32767,
      "maximum": 32767
    },
    "accY": {
      "title": "Accelerometer Y Axis",
      "unit": "mg",
      "description": "Acceleration on the Y-Axis is mg",
      "type": "integer",
      "minimum": -32767,
      "maximum": 32767
    },
    "accZ": {
      "title": "Accelerometer Z Axis",
      "unit": "mg",
      "description": "Acceleration on the Z-Axis is mg",
      "type": "integer",
      "minimum": -32767,
      "maximum": 32767
    }
  },
  "required": [
    "shocks",
    "xAxisAccelerometer",
    "yAxisAccelerometer",
    "zAxisAccelerometer"
  ]
}
