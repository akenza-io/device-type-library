{
  "$id": "https://akenza.io/elsys/elt-lite/default.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Default",
  "type": "object",
  "properties": {
    "temperature": {
      "title": "Temperature",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "humidity": {
      "title": "Humidity",
      "unit": "%",
      "type": "number",
      "description": "The relative humidity in %",
      "minimum": 0,
      "maximum": 100
    },
    "analog1": {
      "type": "number",
      "title": "Analog input 1",
      "desciption": "Voltage in mV",
      "unit": "mV",
      "minimum": 0,
      "maximum": 65535
    },
    "pulse1": {
      "title": "Pulse 1 count",
      "description": "Pulse count between events",
      "type": "number",
      "minimum": 0,
      "maximum": 65535
    },
    "pulseAbs1": {
      "title": "Pulse count absolute",
      "description": "Pulse count absolute",
      "type": "number",
      "minimum": 0,
      "maximum": 4294967295
    },
    "externalTemperature1": {
      "title": "External temperature 1",
      "unit": "°C",
      "type": "number",
      "description": "The external temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "distance": {
      "title": "Distance",
      "unit": "mm",
      "type": "number",
      "description": "Distance in mm",
      "minimum": 0,
      "maximum": 65535
    },
    "accMotion": {
      "title": "Motion (Acceleration)",
      "type": "number",
      "description": "Motion (Acceleration)",
      "minimum": 0,
      "maximum": 255
    },
    "irExternalTemperature": {
      "title": "Infrared external temperature",
      "unit": "°C",
      "type": "number",
      "description": "Infrared external temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "waterleak": {
      "title": "Water leak",
      "description": "Equals true if a waterleak is detected",
      "type": "boolean"
    },
    "pressure": {
      "title": "Pressure",
      "unit": "hpa",
      "description": "Barometric Pressure in hpa",
      "type": "number",
      "minimum": 300,
      "maximum": 1100
    }
  },
  "required": ["temperature", "humidity", "pressure"]
}
