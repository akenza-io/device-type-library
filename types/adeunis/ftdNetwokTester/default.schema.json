{
  "$id": "https://akenza.io/adeunis/ftd/default.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "processingType": "uplink_decoder",
  "topic": "default",
  "title": "Default",
  "properties": {
    "temperature": {
      "title": "Temperature",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "trigger": {
      "title": "Trigger",
      "description": "Action which triggered the uplink",
      "type": "string",
      "enum": [
        "ACCELEROMETER",
        "PUSHBUTTON"
      ]
    },
    "uplink": {
      "title": "Uplink count",
      "description": "Count of triggered uplinks",
      "type": "integer",
      "minimum": 0,
      "maximum": 255
    },
    "downlink": {
      "title": "Downlink count",
      "description": "Count of triggered downlinks",
      "type": "integer",
      "minimum": 0,
      "maximum": 255
    },
    "batteryVoltage": {
      "title": "Battery voltage",
      "unit": "V",
      "description": "Battery voltage",
      "type": "number",
      "minimum": 0,
      "maximum": 65535
    },
    "batteryLevel": {
      "title": "Battery charge",
      "type": "number",
      "minimum": 0,
      "maximum": 100,
      "description": "The battery charge in percent.",
      "unit": "%"
    },
    "rssi": {
      "title": "RSSI",
      "unit": "dBm",
      "description": "Received Signal Strength Indication",
      "type": "number"
    },
    "snr": {
      "title": "SNR",
      "unit": "dB",
      "description": "Signal-to-Noise Ratio",
      "type": "number"
    }
  },
  "required": [
    "temperature",
    "trigger",
    "uplink",
    "downlink",
    "batteryVoltage",
    "batteryLevel"
  ]
}