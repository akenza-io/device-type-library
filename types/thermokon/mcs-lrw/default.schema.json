    "open": {
      "$ref": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/ios/schema.json#/$defs/reedContact/status",
      "title": "Reed Contact State 0"
    },
    "contactCount": {
      "title": "Contact Count 0",
      "type": "number",
      "description": "Event counter for the primary reed contact",
      "hideFromKpis": true
    },
    "open1": {
      "title": "Reed Contact State 1",
      "type": "boolean",
      "description": "State of the secondary reed contact",
      "hideFromKpis": true
    },
    "contactCount1": {
      "title": "Contact Count 1",
      "type": "number",
      "description": "Event counter for the secondary reed contact",
