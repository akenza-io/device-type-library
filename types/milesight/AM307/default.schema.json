{
  "$id": "https://akenza.io/milesight/AM307/default.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "processingType": "uplink_decoder",
  "topic": "default",
  "title": "Default",
  "properties": {
    "temperature": {
      "title": "Temperature",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "humidity": {
      "title": "Humidity",
      "unit": "%",
      "type": "number",
      "description": "The relative humidity in %",
      "minimum": 0,
      "maximum": 100
    },
    "pir": {
      "title": "PIR",
      "description": "PIR is either trigger or idle",
      "type": "string",
      "enum": [
        "TRIGGER",
        "IDLE"
      ]
    },
    "light": {
      "title": "Light",
      "unit": "lux",
      "type": "number",
      "description": "The light in lux.",
      "minimum": 0,
      "maximum": 65535
    },
    "co2": {
      "title": "CO2",
      "unit": "ppm",
      "type": "integer",
      "description": "Carbon Dioxide in ppm",
      "minimum": 0,
      "maximum": 10000
    },
    "tvoc": {
      "title": "VOC",
      "unit": "ppm",
      "type": "integer",
      "description": "Total Volatile Organic Compounds in ppm",
      "minimum": 0,
      "maximum": 60000
    },
    "pressure": {
      "title": "Pressure",
      "unit": "hpa",
      "description": "Barometric Pressure in hpa",
      "type": "number"
    }
  },
  "required": [
    "temperature",
    "humidity",
    "pir",
    "light",
    "co2",
    "tvoc",
    "pressure"
  ]
}