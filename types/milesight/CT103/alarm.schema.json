{
  "$id": "https://akenza.io/milesight/ct103/alarm.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "processingType": "uplink_decoder",
  "topic": "alarm",
  "title": "Alarm",
  "properties": {
    "current": {
      "$ref": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/electricity/schema.json#/$defs/currentMax/ampere",
      "title": "Current",
      "description": "Current value at the time of the alarm."
    },
    "currentMax": {
      "$ref": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/electricity/schema.json#/$defs/currentMax/ampere"
    },
    "currentMin": {
      "title": "Minimum Current",
      "type": "number",
      "unit": "A",
      "description": "Minimum current value since the last report.",
      "hideFromKpis": false
    },
    "currentAlarm": {
      "title": "Current Alarm Status",
      "type": "object",
      "description": "Detailed current alarm status.",
      "hideFromKpis": true,
      "properties": {
        "currentThresholdAlarm": {
          "title": "Current Threshold Alarm",
          "type": "string",
          "enum": [
            "yes",
            "no"
          ]
        },
        "currentThresholdAlarmRelease": {
          "title": "Current Threshold Alarm Release",
          "type": "string",
          "enum": [
            "yes",
            "no"
          ]
        },
        "currentOverRangeAlarm": {
          "title": "Current Over Range Alarm",
          "type": "string",
          "enum": [
            "yes",
            "no"
          ]
        },
        "currentOverRangeAlarmRelease": {
          "title": "Current Over Range Alarm Release",
          "type": "string",
          "enum": [
            "yes",
            "no"
          ]
        }
      }
    },
    "temperature": {
      "$ref": "https://raw.githubusercontent.com/akenza-io/device-type-library/main/data-models/environment/schema.json#/$defs/temperature/celsius",
      "description": "Cable temperature at the time of the alarm."
    },
    "temperatureAlarm": {
      "title": "Temperature Alarm",
      "type": "string",
      "description": "The status of the temperature alarm.",
      "enum": [
        "TEMPERATURE_THRESHOLD_ALARM_RELEASE",
        "TEMPERATURE_THRESHOLD_ALARM"
      ],
      "hideFromKpis": true
    }
  }
}