{
  "$id": "https://akenza.io/decentlab/iam/default.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "processingType": "uplink_decoder",
  "topic": "default",
  "title": "Default",
  "properties": {
    "temperature": {
      "title": "Temperature",
      "unit": "°C",
      "type": "number",
      "description": "The temperature in °C.",
      "minimum": -3276.5,
      "maximum": 3276.5
    },
    "humidity": {
      "title": "Humidity",
      "unit": "%",
      "type": "number",
      "description": "The relative humidity in %",
      "minimum": 0,
      "maximum": 100
    },
    "voc": {
      "title": "VOC",
      "unit": "ppb",
      "type": "integer",
      "description": "Total Volatile Organic Compounds in ppb.",
      "minimum": 0,
      "maximum": 60000
    },
    "co2": {
      "title": "CO2",
      "unit": "ppm",
      "type": "integer",
      "description": "Carbon Dioxide in ppm",
      "minimum": 0,
      "maximum": 10000
    },
    "light": {
      "title": "Light",
      "unit": "lux",
      "type": "number",
      "description": "The light in lux.",
      "minimum": 0,
      "maximum": 65535
    },
    "pressure": {
      "title": "Pressure",
      "unit": "hpa",
      "description": "Barometric Pressure in hpa",
      "type": "number",
      "minimum": 300,
      "maximum": 1100
    },
    "pir": {
      "title": "PIR motion",
      "description": "PIR motion sensor measuring activity level",
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    },
    "rawPir": {
      "title": "Raw PIR motion",
      "description": "Raw PIR motion value of the activity level",
      "type": "integer",
      "minimum": 0,
      "maximum": 65535
    }
  },
  "required": [
    "temperature",
    "humidity",
    "voc",
    "co2",
    "light",
    "pressure",
    "pir",
    "rawPir"
  ]
}