{
  "$id": "https://akenza.io/adnexo/ax-dist/measurement.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "processingType": "uplink_decoder",
  "topic": "measurement",
  "title": "Measurement",
  "properties": {
    "distance": {
      "title": "Distance",
      "unit": "cm",
      "type": "number",
      "description": "Distance measured between the sensor and the surface"
    },
    "fillLevel": {
      "title": "Fill level",
      "unit": "%",
      "type": "number",
      "description": "Fill level of the container"
    },
    "temperature": {
      "title": "Temperature",
      "unit": "°C",
      "type": "number",
      "description": "Temperature in °C"
    },
    "measurementType": {
      "title": "Measurement type",
      "description": "Measurement type",
      "type": "string",
      "enum": [
        "REGULAR_MEASUREMENT",
        "EVENT_MEASUREMENT",
        "MANUAL_MEASUREMENT"
      ],
      "hideFromKpis": true
    }
  },
  "required": [
    "distance",
    "temperature",
    "measurementType"
  ]
}