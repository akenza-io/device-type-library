{
  "$id": "https://akenza.io/adnexo/ax-dist/status.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "processingType": "uplink_decoder",
  "topic": "status",
  "title": "Status",
  "properties": {
    "payloadType": {
      "title": "Payload type",
      "description": "Type of message",
      "type": "string",
      "enum": [
        "ECHO",
        "RESTART",
        "NEW_CONFIGURATION_ACCEPTED",
        "REPORT_CONFIGURATION"
      ],
      "hideFromKpis": true
    },
    "measurementInterval": {
      "title": "Measurement interval",
      "type": "integer",
      "unit": "s",
      "description": "Measurement interval in seconds.",
      "hideFromKpis": true
    },
    "sendInterval": {
      "title": "Send interval",
      "type": "integer",
      "description": "Send every x samples",
      "hideFromKpis": true
    },
    "joinInterval": {
      "title": "Join interval",
      "type": "integer",
      "unit": "s",
      "description": "Join interval in seconds.",
      "hideFromKpis": true
    },
    "reedActive": {
      "title": "Reed active",
      "type": "boolean",
      "description": "True if reed is active",
      "hideFromKpis": true
    },
    "thresholdDistance": {
      "title": "Threshold distance",
      "unit": "mm",
      "type": "number",
      "description": "Message is sent immediately if distance measured is bigger.",
      "hideFromKpis": true
    }
  },
  "required": ["payloadType"]
}
