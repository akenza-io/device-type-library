{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://github.com/akenza-io/device-type-library/tree/main/types/meta.schema.json",
  "type": "object",
  "title": "meta.json schema",
  "description": "Describes the format of the meta.json",
  "examples": [
    {
      "name": "Elsys - ERS Desk",
      "version": "1.0.0",
      "manufacturer": "Elsys",
      "url": "https://www.elsys.se/shop/product/ers-desk/",
      "description": "Indoor LoRaWAN® device for measuring the indoor environment and desk occupancy",
      "author": "Akenza AG",
      "firmwareVersion": "V1.0.0",
      "availableSensors": [
        "Occupancy",
        "Temperature",
        "Humidity",
        "Light"
      ],
      "outputTopics": [
        "default",
        "occupancy"
      ],
      "encoding": "HEX",
      "connectivity": "LORA"
    }
  ],
  "required": [
    "name",
    "version",
    "manufacturer",
    "author",
    "outputTopics",
    "encoding",
    "connectivity"
  ],
  "properties": {
    "name": {
      "type": "string",
      "title": "The name schema",
      "description": "Device type display name.",
      "examples": [
        "Elsys - ERS Desk"
      ]
    },
    "version": {
      "type": "string",
      "title": "The device type version schema",
      "description": "The version of the device type (schemas + script).",
      "pattern": "^([0-9]+)\\.([0-9]+)\\.([0-9]+)(?:-([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?(?:\\+[0-9A-Za-z-]+)?$",
      "examples": [
        "1.0.0"
      ]
    },
    "manufacturer": {
      "type": "string",
      "title": "The manufacturer schema",
      "description": "Device manufacturer name.",
      "examples": [
        "Elsys"
      ]
    },
    "url": {
      "type": "string",
      "title": "The url schema",
      "description": "URL of the device.",
      "examples": [
        "https://www.elsys.se/shop/product/ers-desk/"
      ]
    },
    "description": {
      "type": "string",
      "title": "The description schema",
      "description": "Short device overview.",
      "examples": [
        "Indoor LoRaWAN® device for measuring the indoor environment and desk occupancy"
      ]
    },
    "author": {
      "type": "string",
      "title": "The author schema",
      "description": "Author of the device type.",
      "examples": [
        "Akenza AG"
      ]
    },
    "firmwareVersion": {
      "type": "string",
      "title": "The firmwareVersion schema",
      "description": "Firmware version reported by the device.",
      "pattern": "^V([0-9]+)\\.([0-9]+)\\.([0-9]+)(?:-([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?(?:\\+[0-9A-Za-z-]+)?$",
      "examples": [
        "V1.0.0"
      ]
    },
    "availableSensors": {
      "type": "array",
      "title": "The availableSensors schema",
      "description": "List of sensors the device provides.",
      "examples": [
        [
          "Occupancy",
          "Temperature"
        ]
      ],
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "outputTopics": {
      "type": "array",
      "title": "The outputTopics schema",
      "description": "Topics the device publishes (e.g., default, lifecycle).",
      "default": [
        "default"
      ],
      "examples": [
        [
          "default",
          "occupancy"
        ]
      ],
      "uniqueItems": true,
      "items": {
        "type": "string"
      }
    },
    "encoding": {
      "type": "string",
      "title": "The encoding schema",
      "description": "Payload encoding format.",
      "enum": [
        "HEX",
        "JSON"
      ],
      "examples": [
        "HEX"
      ]
    },
    "connectivity": {
      "type": "string",
      "title": "The connectivity schema",
      "description": "Network technology used by the device.",
      "enum": [
        "LORA",
        "Sigfox",
        "MQTT",
        "HTTP",
        "NB-IOT",
        "MIOTY"
      ],
      "examples": [
        "LORA"
      ]
    }
  }
}